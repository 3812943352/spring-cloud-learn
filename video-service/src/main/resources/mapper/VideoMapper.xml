<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.learning.videoservice.mapper.VideoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.learning.videoservice.entity.VideoEntity">
        <id column="ID" property="id"/>
        <result column="title" property="title"/>
        <result column="des" property="des"/>
        <result column="content_path" property="contentPath"/>
        <result column="uploader" property="uploader"/>
        <result column="created" property="created"/>
        <result column="updated" property="updated"/>
        <result column="class_id" property="classId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        ID, title, des, content_path, uploader, created, updated, class_id
    </sql>

</mapper>
